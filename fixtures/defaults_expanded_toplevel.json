{
  "$schema": "http:\/\/json-schema.org\/draft-04\/schema#",
  "required": [
    "some_base_property",
    "grand",
    "SomeUntaggedBaseProperty",
    "id",
    "name",
    "nickname",
    "TestFlag",
    "age",
    "email"
  ],
  "properties": {
    "SomeUntaggedBaseProperty": {
      "type": "boolean"
    },
    "TestFlag": {
      "type": "boolean"
    },
    "age": {
      "maximum": 120,
      "exclusiveMaximum": true,
      "minimum": 18,
      "exclusiveMinimum": true,
      "type": "integer"
    },
    "birth_date": {
      "type": "string",
      "format": "date-time"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "feeling": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "integer"
        }
      ]
    },
    "friends": {
      "items": {
        "type": "integer"
      },
      "type": "array"
    },
    "grand": {
      "$schema": "http:\/\/json-schema.org\/draft-04\/schema#",
      "$ref": "#\/definitions\/GrandfatherType"
    },
    "id": {
      "type": "integer"
    },
    "keywords": {
      "patternProperties": {
        ".*": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "name": {
      "maxLength": 20,
      "minLength": 1,
      "type": "string"
    },
    "network_address": {
      "type": "string",
      "format": "ipv4"
    },
    "nickname": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "photo": {
      "type": "string",
      "media": {
        "binaryEncoding": "base64"
      }
    },
    "secret_float_number": {
      "enum": [
        9.1,
        30.2,
        28.4,
        52.9
      ],
      "type": "number"
    },
    "secret_number": {
      "enum": [
        9,
        30,
        28,
        52
      ],
      "type": "integer"
    },
    "sex": {
      "enum": [
        "male",
        "female",
        "neither",
        "whatever",
        "other",
        "not applicable"
      ],
      "type": "string"
    },
    "some_base_property": {
      "type": "integer"
    },
    "tags": {
      "type": "object"
    },
    "website": {
      "type": "string",
      "format": "uri"
    }
  },
  "additionalProperties": false,
  "type": "object",
  "definitions": {
    "GrandfatherType": {
      "required": [
        "family_name"
      ],
      "properties": {
        "family_name": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
}
