{
  "definitions": {
    "jsonschema.Desktop": {
      "additionalProperties": false,
      "properties": {
        "form_factor": {
          "pattern": "^(standard|micro|mini|nano)",
          "type": "string"
        },
        "need_keyboard": {
          "type": "boolean"
        }
      },
      "required": ["form_factor", "need_keyboard"],
      "type": "object"
    },
    "jsonschema.Developer": {
      "additionalProperties": false,
      "properties": {
        "experience": {
          "minLength": 1,
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "hardware": {
          "$ref": "#/definitions/jsonschema.Hardware",
          "$schema": "http://json-schema.org/draft-04/schema#"
        },
        "language": {
          "pattern": "\\S+",
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": ["experience", "language", "hardware"],
      "type": "object"
    },
    "jsonschema.Hardware": {
      "additionalProperties": false,
      "oneOf": [{
        "$ref": "#/definitions/jsonschema.Laptop",
        "$schema": "http://json-schema.org/draft-04/schema#"
      }, {
        "$ref": "#/definitions/jsonschema.Desktop",
        "$schema": "http://json-schema.org/draft-04/schema#"
      }],
      "properties": {
        "brand": {
          "enum": ["microsoft", "apple", "lenovo", "dell"],
          "type": "string"
        },
        "memory": {
          "type": "integer"
        }
      },
      "required": ["brand", "memory"],
      "type": "object"
    },
    "jsonschema.Laptop": {
      "additionalProperties": false,
      "properties": {
        "brand": {
          "pattern": "^(apple|lenovo|dell)$",
          "type": "string"
        },
        "need_touchscreen": {
          "type": "boolean"
        }
      },
      "required": ["brand", "need_touchscreen"],
      "type": "object"
    },
    "jsonschema.Tester": {
      "additionalProperties": false,
      "properties": {
        "experience": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": ["experience"],
      "type": "object"
    }
  },
  "oneOf": [{
    "$ref": "#/definitions/jsonschema.Tester",
    "$schema": "http://json-schema.org/draft-04/schema#"
  }, {
    "$ref": "#/definitions/jsonschema.Developer",
    "$schema": "http://json-schema.org/draft-04/schema#"
  }]
}